# ─── Server ───────────────────────────────────────────
PORT=3000
NODE_ENV=development

# ─── JWT ──────────────────────────────────────────────
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# ─── Supabase ─────────────────────────────────────────
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE=your_supabase_service_role_key

# ─── Instagram ────────────────────────────────────────
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_BUSINESS_ID=your_instagram_business_id
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=your_ig_webhook_verify_token
INSTAGRAM_BASE_URL=https://graph.instagram.com/v21.0/me/messages

# ─── WhatsApp ─────────────────────────────────────────
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_business_account_id
WHATSAPP_VERIFY_TOKEN=your_whatsapp_verify_token
WHATSAPP_BASE_URL=https://graph.facebook.com/v22.0/{PHONE_NUMBER_ID}/messages

# ─── Meta ─────────────────────────────────────────────
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
